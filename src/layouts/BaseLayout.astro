---
import Breadcrumb from "~/components/Breadcrumb.astro";
import "../styles/global.css";

const { title, depth, description } = Astro.props;

const siteName = "PlayTip";
const docTitle = (title && `${title} | ${siteName}`) || siteName;

import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{docTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="HTML, CSS, JavaScript, Webdev" />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.request.url} />
    <meta property="og:image" content="https://playtip.kr/playtip.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://unpkg.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Sono"
    />
  </head>
  <body class="bg-blue-50">
    <main class={`container max-w-3xl px-4 depth${depth}`}>
      <slot name="nav" />
      <Breadcrumb />
      <slot name="title" />
      <slot />
    </main>
    <footer
      class="border-t border-gray-200 dark:border-slate-900 my-20 pt-3 text-right"
    >
      <div class="container max-w-3xl">
        <a
          href="/about"
          class="inline-block text-gray-400 font-sono tracking-tighter text-sm"
        >
          about</a
        >
      </div>
    </footer>
  </body>
</html>
