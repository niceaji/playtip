---
import { topMenus } from "~/config.mjs";
import Layout from "~/layouts/TopLayout.astro";
---

<Layout depth="0">
  <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
    {
      topMenus.map((menu) => (
        <a
          href={menu.url}
          class="flex flex-col p-6 bg-white
           dark:bg-slate-900 rounded shadow-xl 
           hover:text-red-500
           hover:shadow-lg transition dark:border dark:border-slate-800"
        >
          <div class="flex items-center mb-4">
            <img src={`/svg/${menu.icon}.svg`} width="30" alt="" class="mr-1" />
            <div class="text-2xl font-bold">{menu.title}</div>
          </div>
        </a>
      ))
    }
  </div>
</Layout>
