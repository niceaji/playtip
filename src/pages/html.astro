---
import Layout from "../layouts/TopLayout.astro";
import Item from "../components/Item.astro";

const posts = await Astro.glob("./html/*.{md,mdx}");
---

<Layout title="HTML" depth="1">
  <div class="grid grid-cols-1 gap-3 md:grid-cols-2">
    {
      posts.map((post) => (
        <Item
          title={post.frontmatter.title}
          url={post.url}
          tags={post.frontmatter.tags}
        />
      ))
    }
  </div>
</Layout>
